pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                // Build your Spring project using Maven
                bat 'mvn clean package'
            }
        }
        
        stage('Test') {
            steps {
                // Run tests using Maven
                bat 'mvn test'
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                // Run SonarScanner analysis
                withSonarQubeEnv('sq2') {
  mvn clean verify sonar:sonar \
  -Dsonar.projectKey=test \
  -Dsonar.projectName='test' \
  -Dsonar.host.url=http://localhost:9000 \
  -Dsonar.token=sqp_30f9f98fc657685b0f5f84f53e7ab18ad865d681
                }
            }
        }
        
        stage('Deploy') {
            steps {
                // Deployment steps (e.g., deploying to a server)
                // This may vary based on your deployment strategy
                // Example: deploying to Tomcat
                echo "Deployed"
            }
        }
    }
}
